<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout style="@style/title_bule_layout" >

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_lsxz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="  接办案   "
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_pls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="我要聘律师"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_tabline"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/white" />
            </LinearLayout>
        </LinearLayout>
        
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="分享"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:weightSum="10" >

        <EditText
            android:id="@+id/et_keyword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@drawable/frame_gray"
            android:hint="请输入关键词"
            android:padding="5dp"
           android:singleLine="true"
            android:textColor="@color/grey"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_serach"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/frame_gray"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/icon_serach" />

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/frame_gray"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/textbule"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.3" >

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/sort_btn_selector"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:singleLine="true"
                android:text="最新发布"
                android:textColor="@color/textgrey"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            style="@style/greyvline"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.3" >

            <TextView
                android:id="@+id/tv_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/sort_btn_selector"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:singleLine="true"
                android:text="地区"
                android:textColor="@color/textgrey"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            style="@style/greyvline"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.3" >

            <TextView
                android:id="@+id/tv_bolt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/sort_btn_selector"
                android:gravity="center"
                android:padding="3dp"
                android:singleLine="true"
                android:text="选择类型"
                android:textColor="@color/textgrey"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        style="@style/grayline"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <TextView
            android:id="@+id/rb_check_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/remember_selector"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="只看我已申请的"
            android:textColor="@color/textbule" />

        <TextView
            android:id="@+id/rb_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/remember_selector"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="只看我未申请的"
            android:textColor="@color/textbule" />
    </LinearLayout>

    <View style="@style/grayline"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/lv_lawyer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_publish"
            android:divider="@null"
            android:padding="5dp"
            android:scrollbars="none" >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>

        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/textbule"
            android:gravity="center"
            android:padding="10dp"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_text" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_publish"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_office_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/tv_tool"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/backroud_radius_bule"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="问答咨询"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_toolnav"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/backroud_radius_bule"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="我要聘律师"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp" >
                <ImageView
                    android:id="@+id/tv_table"
                    android:src="@drawable/threepoint"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/dot_max_bule" />
            </RelativeLayout>
        </LinearLayout>
        
         <ImageView
             android:visibility="gone"
             android:layout_marginBottom="50dp"
             android:layout_alignParentRight="true"
            android:id="@+id/iv_btn_to_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/btntotop" />
        
    </RelativeLayout>

</LinearLayout>