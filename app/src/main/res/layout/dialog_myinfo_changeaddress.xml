<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30000000"
    android:orientation="vertical" >

    <LinearLayout
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View style="@style/grayline" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="13dip"
            android:gravity="center"
            android:text="选择地区"
            android:textColor="#000000"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <TextView

                android:id="@+id/btn_myinfo_cancel"
                android:layout_width="70dip"
                android:layout_height="33dip"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/textbule"
                android:textSize="14sp" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/btn_myinfo_sure"
                android:layout_width="70dip"
                android:layout_height="33dip"
                android:layout_marginRight="15dip"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/textbule"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.wpd.address.wheel.widget.views.WheelView
                android:id="@+id/wv_address_province"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <com.wpd.address.wheel.widget.views.WheelView
                android:id="@+id/wv_address_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <com.wpd.address.wheel.widget.views.WheelView
                android:id="@+id/wv_address_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>