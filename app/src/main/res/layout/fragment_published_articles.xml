<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dot_max_bule"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_publish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="发表文章"
            android:textColor="@color/textgrey"
            android:textSize="13sp" />
    </LinearLayout>

    <View style="@style/grayline" />

        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    
    <com.yhy.hzzll.widget.CustomListview
        android:id="@+id/lv_office"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5px" >
    </com.yhy.hzzll.widget.CustomListview>
    
      <TextView   
        android:id="@+id/tv_no_data"  
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent"  
        android:text="暂无信息"  
        android:gravity="center"  /> 
</LinearLayout>
</LinearLayout>