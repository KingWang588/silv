<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <RelativeLayout
        style="@style/title_layout"
        android:background="@color/textbule" >


        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/scan_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的办公室"
            android:textColor="@color/white"
            android:textSize="@dimen/titlebar_text" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/user_setting" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/linear_no_login"
            android:background="@color/textbule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp">
            <ImageView
                android:id="@+id/iv_no_login"
                android:src="@drawable/personal_picture2"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:padding="20dp"
                android:text="点击登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_login"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">






        <LinearLayout


            android:background="@color/textbule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="15dp">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="100dp">

                <ImageView
                    android:src="@drawable/register_nomal"
                    android:id="@+id/iv_user_avatar"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />

                <ImageView

                    android:id="@+id/iv_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/rl_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView

                            android:textSize="18sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="私律律师" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_certified_phone"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/iv_certified_phone" />

                            <ImageView
                                android:id="@+id/iv_certified_email"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/user_smstag" />

                            <ImageView
                                android:id="@+id/iv_certified_user"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/user_infotag" />
                        </LinearLayout>

                        <RatingBar
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:id="@+id/ratingbar"
                            style="@style/RatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="1" />


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp" >

                            <TextView
                                android:textColor="@color/white"
                                android:id="@+id/tv_browse_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="浏览  0" />

                            <TextView
                                android:id="@+id/tv_collect_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="center_vertical"
                                android:text="关注  0"
                                android:textColor="@color/white" />

                        </LinearLayout>


                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="15sp"
                                android:gravity="right"

                                android:drawablePadding="5dp"
                                android:layout_marginTop="10dp"
                                android:id="@+id/tv_invitation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="邀请注册有奖"
                                android:drawableRight="@drawable/icon_arrow_right"
                                android:textColor="@color/white" />
                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="@color/white"
                        android:text="咨询律师"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_count_reply"
                        android:textColor="@color/white"
                        android:text="（10）"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <RatingBar

                        android:layout_marginLeft="10dp"
                        android:id="@+id/ratingbar_reply"
                        style="@style/RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="0"
                        android:stepSize="0.5" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_zs"
                android:paddingBottom="20dp"
                android:background="@color/textbule"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_marriage"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:src="@drawable/credit_insurance"
                android:layout_height="wrap_content" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_creditor"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:src="@drawable/marriage_insurance"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

<View
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="10dp"/>


    <LinearLayout
        android:id="@+id/rl_treasure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="咨询收入" />
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/cgrey"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_working_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接办案收入" />
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/cgrey"
            android:padding="5dp" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_frozen_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="托管酬金" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/cgrey"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="财富余额" />
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/cgrey"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_action_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/backroud_radius_cyellow"
                android:paddingBottom="7dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="7dp"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>