<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_latest_user_consultation_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="最新咨询"
                android:textColor="@drawable/tv_selector" />


            <View
                android:layout_marginBottom="5dp"
                android:paddingBottom="6dp"
                android:padding="5dp"
                android:id="@+id/line_zixun_top"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@color/textbule" />

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="@color/ccgrey" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_my_exclusive_consulting_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="我的解答"
                android:textColor="@drawable/tv_selector" />

            <View
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:paddingBottom="6dp"
                android:id="@+id/line_jieda_top"
                android:padding="5dp"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@color/textbule"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_more_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/icon_arrow_right"
            android:gravity="right|center_vertical"
            android:text="更多"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>