<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/backroud_rwhite"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="评论内容"
        android:textColor="@color/textgrey"
        android:textSize="14sp" />

    <View style="@style/grayline" />

    <EditText
        android:id="@+id/et_moneys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="5"
        android:background="@drawable/frame_cgray"
        android:gravity="top"
        android:hint="请输入评论内容"
        android:minLines="5"
        android:padding="5dp"
        android:textColor="@color/textgrey"
        android:textColorHint="@color/cgrey"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/backroud_cgrey"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/textgrey" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/backroud_bule"
            android:gravity="center"
            android:padding="10dp"
            android:text="发送"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>