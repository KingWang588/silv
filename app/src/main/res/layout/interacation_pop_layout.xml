<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:text="分享至"
        android:textColor="@color/textgrey"
        android:textSize="16sp" />

    <View style="@style/grayline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" >

        <TextView
            android:textColor="@color/black"
            android:id="@+id/share_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_weixin"
            android:gravity="center"
            android:text="微信" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/share_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
        android:clickable="true"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_friend"
            android:gravity="center"
            android:text="朋友圈" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_qq"
            android:gravity="center"
            android:text="QQ" />

        <TextView
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false"
            android:id="@+id/share_sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_sina"
            android:gravity="center"
            android:text="微博" />
    </LinearLayout>

    <View style="@style/grayline" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/textgrey"
        android:textSize="16sp" />

</LinearLayout>