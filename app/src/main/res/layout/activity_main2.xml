<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:layout_marginBottom="50dp"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@color/ccgrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tv_hzhome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/home_homepage_selector"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/home_color_selector"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_ask_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/home_zixun_selector"
            android:gravity="center"
            android:text="用户咨询"
            android:textColor="@color/home_color_selector"
            android:textSize="11sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/home_interaction_selector"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/home_color_selector"
                android:textSize="11sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:id="@+id/tv_msg_number"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/dot_message_red"
                    android:text="99"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    />

            </LinearLayout>


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_userinfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/home_userinfo_selector"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/home_color_selector"
            android:textSize="11sp" />
    </LinearLayout>
</RelativeLayout>